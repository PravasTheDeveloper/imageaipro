generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// schema.prisma

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  email         String  @unique
  username      String  @unique
  photo         String
  name          String?
  password      String
  planId        Int     @default(1)
  creditBalance Int     @default(10)
}
